                    android:textAlignment="center"
                    android:text="Electricity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:weightSum="4"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <!--5-->
            <LinearLayout
