<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="387dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-188dp"
        android:src="@mipmap/topdesign" />

    <!--Cardview top 4 buttons-->
    <android.support.v7.widget.CardView
        android:id="@+id/top_card_view"
        android:elevation="2dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/cardtop_width_large"
        android:layout_height="@dimen/cardtop_height_large">

        <GridLayout

            android:layout_gravity="center"
            android:columnCount="4"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Load"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/roundbuttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textSize="10dp"
                android:textColor="@color/colorPrimary"/>

            <Button

                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_margin="4dp"
                android:text="Load"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/roundbuttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textSize="10dp"
                android:textColor="@color/colorPrimary"/>

            <Button

                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_margin="4dp"
                android:text="Load"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/roundbuttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textSize="10dp"
                android:textColor="@color/colorPrimary"/>

            <Button

                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_margin="4dp"
                android:text="Load"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/roundbuttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textSize="10dp"
                android:textColor="@color/colorPrimary"/>









        </GridLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:textSize="18dp"
        android:layout_marginLeft="25dp"
        android:paddingTop="10dp"
        android:layout_below="@id/top_card_view"
        android:id="@+id/tv_paywithus"
        android:textColor="#000000"
        android:text="Pay with us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--Grid 8 buttons-->
